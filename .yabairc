#!/usr/bin/env sh     

sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

# bar settings
#yabai -m config status_bar                   off
#yabai -m config status_bar_text_font         "Helvetica Neue:Bold:12.0"
#yabai -m config status_bar_icon_font         "Hack Nerd Font Mono:Regular:12.0"
#yabai -m config status_bar_background_color  0xff16242c
#yabai -m confiß status_bar_foreground_color  0xffa8a8a8
#yabai -m config status_bar_space_icon_strip  I II III IV V VI VII VIII IX X
#yabai -m config status_bar_power_icon_strip  
#yabai -m config status_bar_space_icon        
#yabai -m config status_bar_clock_icon        

# global settings
yabai -m config mouse_follows_focus          on
yabai -m config focus_follows_mouse          autofocus						
yabai -m config window_placement             second_child
#yabai -m config window_opacity              off
#yabai -m config window_opacity_duration     0.0
yabai -m config window_topmost               on
yabai -m config window_shadow                off
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.90
yabai -m config split_ratio                  0.66
yabai -m config auto_balance                 on
yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize
yabai -m config mouse_drop_action            swap

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  40
yabai -m config bottom_padding               10
yabai -m config left_padding                 30
yabai -m config right_padding                10
yabai -m config window_gap                   20

# rules
yabai -m space 1 --label I_
yabai -m space 2 --label Write
yabai -m space 3 --label Browser
yabai -m space 4 --label Tools
yabai -m space 5 --label Comm
yabai -m space 6 --label Media
yabai -m space 7 --label Utilities
yabai -m space 8 --label System
yabai -m space 9 --label Lab
yabai -m space 10 --label Float

yabai -m config --space 9 layout float
yabai -m config --space 10 layout float

yabai -m rule --add title='.*Install.*' manage=off
yabai -m rule --add label="About This Mac" app="System Information" title="About This Mac" manage=off
yabai -m rule --add label="Finder" app="^Finder$" title="(Co(py|nnect)|Move|Info|Pref)" manage=off
yabai -m rule --add label="Bitwarden" app="^Bitwarden$" manage=off 
yabai -m rule --add label="Hammerspoon" app="^Hammerspoon$" manage=off

yabai -m rule --add label="iTerm" app="iTerm" space=1
yabai -m signal --add event=application_launched action="yabai -m space --focus iterm &> /dev/null" app="iTerm"
yabai -m rule --add label="Terminal" app="^Terminal$" manage=off space=1

yabai -m rule --add label="Sublime" app="Sublime Text" space=2 
yabai -m signal --add event=application_launched action="yabai -m space --focus sublime &> /dev/null" app="Sublime Text"

yabai -m rule --add label="Code" app="Code" space=2

yabai -m rule --add label="Safari" app="^Safari$" title="(General|(Tab|Password|Website|Extension)s|AutoFill|Se(arch|curity)|Privacy|Advance)" space=3
yabai -m rule --add label="Google Chrome" app="^Google Chrome$" title='^Picture in Picture$' manage=off space=3

yabai -m rule --add label="GIMP" app="^GIMP-2.10$" manage=off space=4

yabai -m rule --add label="Messages" app="^Messages$" space=5
yabai -m rule --add label="Mail" app="^Mail$" space=5

yabai -m rule --add label="Reminders" app="^Reminders$" space=7
yabai -m rule --add label="Notes" app="^Notes$" space=7
yabai -m signal --add event=application_launched action="yabai -m space --focus notes &> /dev/null" app="^Notes$"
yabai -m rule --add label="Calendar" app="Calendar" manage=off space=7
yabai -m rule --add label="Terminal" app="^Terminal$" manage=off space=1

yabai -m rule --add label="App Store" app="^App Store$" manage=off space=8
yabai -m rule --add label="System Preferences" app='^System Preferences$' manage=off space=8
yabai -m rule --add label="Activity Monitor" app='^Activity Monitor$' manage=off space=8

yabai -m rule --add label="UTM" app="^UTM$" manage=off space=9
yabai -m rule --add label="Windows 10" app="Windows\ 10$" manage=off space=9

yabai -m signal --add event=space_changed \
    action="osascript -e 'tell application \"Übersicht\" to refresh widget id \"simple-bar-spaces-jsx\"'"

# if using multple displays, add an additional rule for "display_changed" event
yabai -m signal --add event=display_changed \
    action="osascript -e 'tell application \"Übersicht\" to refresh widget id \"simple-bar-spaces-jsx\"'"

yabai -m signal --add event=window_focused \
    action="osascript -e 'tell application \"Übersicht\" to refresh widget id \"simple-bar-data-jsx\"'"
yabai -m signal --add event=window_destroyed \
    action="osascript -e 'tell application \"Übersicht\" to refresh widget id \"simple-bar-data-jsx\"'"
yabai -m signal --add event=window_created \
    action="osascript -e 'tell application \"Übersicht\" to refresh widget id \"simple-bar-data-jsx\"'"
yabai -m signal --add event=space_changed \
    action="osascript -e 'tell application \"Übersicht\" to refresh widget id \"simple-bar-data-jsx\"'"

echo "yabai configuration loaded.."
